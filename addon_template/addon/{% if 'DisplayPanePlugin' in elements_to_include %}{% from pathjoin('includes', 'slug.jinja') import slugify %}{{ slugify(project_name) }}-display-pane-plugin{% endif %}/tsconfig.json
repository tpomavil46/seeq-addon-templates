{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "sdk/*": [
        "sdk/*"
      ]
    },
    "jsx": "react"
  },
  "include": [
    "**/*.d.ts",
    "src/index.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "sdk/**/*.ts"
  ],
  "exclude": [
    "**/*.js",
    "**/*.jsx",
    "node_modules"
  ]
}
